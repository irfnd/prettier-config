{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"declaration": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist/esm",
		"declarationDir": "dist/types",
		"typeRoots": ["node_modules/@types"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
